<body>
    <p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>



  <tbody>
　　　<% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><a class="show_61778" href="/books/61778">Show</a></td>
        <td><a class="edit_61778" href="/books/61778/edit">Edit</a></td>
        <td><a data-confirm="Are you sure?" class="destroy_61778" rel="nofollow" data-method="delete" href="/books/61778">Destroy</a></td>
      </tr>
      <% end %>
  </tbody>
</table>



<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>


  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>



  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>


</body>